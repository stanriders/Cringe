@page
@using Cringe.Types.Database
@model Cringe.Web.Pages.Beatmaps.EditModel

@{
}

<h4>@Model.Beatmap.FullTitle</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Beatmap.Id"/>
            <div class="form-group">
                <label asp-for="Beatmap.Status" class="control-label"></label>
                <input asp-for="Beatmap.Status" class="form-control"/>
                <span asp-validation-for="Beatmap.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}