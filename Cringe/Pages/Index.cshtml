@page
@model Cringe.Pages.IndexModel
@{
    ViewData["Title"] = "Hello";
}

<h1>Biggest Cringe</h1>

<table class="table">
    <thead>
    <tr>
        <th>Beatmap</th>
        <th>Username</th>
        <th>Accuracy</th>
        <th>Combo</th>
        <th>Rank</th>
        <th>Mods</th>
        <th>Game Mode</th>
        <th>Date</th>
        <th>CRINGE POINTS</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Scores)
    {
        <tr>
            <td>
                <a asp-page="./Beatmaps/Index" asp-route-id="@item.BeatmapId">@item.BeatmapTitle</a>
            </td>
            <td>
                <a asp-page="./Players/Index" asp-route-id="@item.PlayerId">@item.PlayerUsername</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accuracy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxCombo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mods)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameMode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pp)
            </td>
        </tr>
    }
    </tbody>
</table>